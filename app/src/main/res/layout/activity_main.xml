<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9DBEE3"
        android:backgroundTint="#BAABE8"
        android:orientation="vertical">

        <Button
            android:id="@+id/Button_suma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D84315"
            android:drawableTint="#558B2F"
            android:foregroundTint="#2E7D32"
            android:shadowColor="#AD1457"
            android:text="Suma"
            android:textColor="@color/white"
            android:textColorHighlight="#00695C" />

        <Button
            android:id="@+id/Button_resta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6A1B9A"
            android:text="resta" />

        <Button
            android:id="@+id/Button_multiplicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9A825"
            android:text="multiplicacion" />

        <Button
            android:id="@+id/Button_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#509CF3"
            android:text="division" />

        <Button
            android:id="@+id/button_operacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D5568E"
            android:text="Km a cm" />

        <Button
            android:id="@+id/button_dinero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5BD861"
            android:text="Euros a Pesos" />

        <Button
            android:id="@+id/button_tiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#732FDF"
            android:text="Dias a Segundos" />

        <Button
            android:id="@+id/button_cambio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D537CC"
            android:text="Megas a Bytes" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>